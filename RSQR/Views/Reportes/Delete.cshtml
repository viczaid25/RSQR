@model RSQR.Models.Reporte

@{
    ViewData["Title"] = "Eliminar Reporte";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Eliminar Reporte</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i> Volver a la lista
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Confirmar Eliminación</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h5><i class="fas fa-exclamation-triangle me-2"></i>¿Está seguro que desea eliminar este reporte?</h5>
            <p class="mb-0">Esta acción no se puede deshacer y se perderán todos los datos asociados.</p>
        </div>

        <!-- Resumen del Reporte -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h6 class="mb-0">Detalles del Reporte</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Fecha</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Fecha)</dd>

                            <dt class="col-sm-4">Usuario</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

                            <dt class="col-sm-4">Línea</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Linea)</dd>

                            <dt class="col-sm-4">Tipo</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Tipo)</dd>

                            <dt class="col-sm-4">Título</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.TituloProblema)</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Nivel Problema</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ProblemRank)</dd>

                            <dt class="col-sm-4">Parte Afectado</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.NumParteAfectado)</dd>

                            <dt class="col-sm-4">Lote</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Lote)</dd>

                            <dt class="col-sm-4">Reclamo</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerClaimNumber)</dd>
                        </dl>
                    </div>
                </div>

                <div class="mt-3">
                    <h6>Descripción del Problema:</h6>
                    <div class="border p-3 bg-light rounded">
                        @Html.DisplayFor(model => model.DescripcionProblema)
                    </div>
                </div>
            </div>
        </div>

        <!-- Formulario de Eliminación -->
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i> Confirmar Eliminación
                </button>
            </div>
        </form>
    </div>
</div>