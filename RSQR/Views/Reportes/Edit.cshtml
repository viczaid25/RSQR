@model RSQR.Models.Reporte

@{
    ViewData["Title"] = "Editar Reporte";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Editar Reporte</h1>
    <div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Volver a la lista
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h5 class="mb-0">Información del Reporte</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Sección 1: Información Básica -->
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Fecha" class="form-label">Fecha</label>
                    <input asp-for="Fecha" class="form-control" type="date" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProblemRank" class="form-label">Nivel del Problema</label>
                    <input asp-for="ProblemRank" class="form-control" />
                    <span asp-validation-for="ProblemRank" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="UserName" class="form-label">Usuario</label>
                    <input asp-for="UserName" class="form-control" readonly />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Linea" class="form-label">Línea</label>
                    <input asp-for="Linea" class="form-control" />
                    <span asp-validation-for="Linea" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Tipo" class="form-label">Tipo</label>
                    <input asp-for="Tipo" class="form-control" />
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="TituloProblema" class="form-label">Título del Problema</label>
                    <input asp-for="TituloProblema" class="form-control" />
                    <span asp-validation-for="TituloProblema" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CincoM" class="form-label">5M</label>
                    <input asp-for="CincoM" class="form-control" />
                    <span asp-validation-for="CincoM" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="NumParteAfectado" class="form-label">Número de Parte Afectado</label>
                    <input asp-for="NumParteAfectado" class="form-control" />
                    <span asp-validation-for="NumParteAfectado" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Lote" class="form-label">Lote</label>
                    <input asp-for="Lote" class="form-control" />
                    <span asp-validation-for="Lote" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerClaimNumber" class="form-label">Número de Reclamo</label>
                    <input asp-for="CustomerClaimNumber" class="form-control" />
                    <span asp-validation-for="CustomerClaimNumber" class="text-danger"></span>
                </div>
            </div>

            <!-- Sección 2: Descripciones -->
            <div class="col-12">
                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DescripcionProblema" class="form-label">Descripción del Problema</label>
                    <textarea asp-for="DescripcionProblema" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="DescripcionProblema" class="text-danger"></span>
                </div>
            </div>

            <!-- Sección 3: Análisis 5W2H -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">Análisis 5W2H</h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="QueP" class="form-label">¿Qué?</label>
                            <input asp-for="QueP" class="form-control" />
                            <span asp-validation-for="QueP" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="PorqueP" class="form-label">¿Por qué?</label>
                            <input asp-for="PorqueP" class="form-control" />
                            <span asp-validation-for="PorqueP" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="DondeP" class="form-label">¿Dónde?</label>
                            <input asp-for="DondeP" class="form-control" />
                            <span asp-validation-for="DondeP" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="QuienP" class="form-label">¿Quién?</label>
                            <input asp-for="QuienP" class="form-control" />
                            <span asp-validation-for="QuienP" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CuandoP" class="form-label">¿Cuándo?</label>
                            <input asp-for="CuandoP" class="form-control" type="date" />
                            <span asp-validation-for="CuandoP" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CuantosP" class="form-label">¿Cuántos?</label>
                            <input asp-for="CuantosP" class="form-control" />
                            <span asp-validation-for="CuantosP" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ComoP" class="form-label">¿Cómo?</label>
                            <input asp-for="ComoP" class="form-control" />
                            <span asp-validation-for="ComoP" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sección 4: Contención -->
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">Contención</h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="ContencionItems" class="form-label">Items</label>
                                    <input asp-for="ContencionItems" class="form-control" />
                                    <span asp-validation-for="ContencionItems" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="ContencionActividades" class="form-label">Actividades</label>
                                    <input asp-for="ContencionActividades" class="form-control" />
                                    <span asp-validation-for="ContencionActividades" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="ContencionResponsables" class="form-label">Responsables</label>
                                    <input asp-for="ContencionResponsables" class="form-control" />
                                    <span asp-validation-for="ContencionResponsables" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="ContencionFechasInicio" class="form-label">Fechas Inicio</label>
                                    <input asp-for="ContencionFechasInicio" class="form-control" type="date" />
                                    <span asp-validation-for="ContencionFechasInicio" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sección 5: Información Adicional -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">Acciones</h6>
                    </div>
                    <div class="card-body">
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="AlertaCalidad" />
                            <label class="form-check-label" asp-for="AlertaCalidad"></label>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Disposicion" class="form-label">Disposición</label>
                            <input asp-for="Disposicion" class="form-control" />
                            <span asp-validation-for="Disposicion" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="EntrevistaInvolucrados" />
                            <label class="form-check-label" asp-for="EntrevistaInvolucrados"></label>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Comentarios" class="form-label">Comentarios</label>
                            <textarea asp-for="Comentarios" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Comentarios" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">Evaluación</h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="Severidad" class="form-label">Severidad</label>
                            <input asp-for="Severidad" class="form-control" />
                            <span asp-validation-for="Severidad" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Ocurrencia" class="form-label">Ocurrencia</label>
                            <input asp-for="Ocurrencia" class="form-control" />
                            <span asp-validation-for="Ocurrencia" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Deteccion" class="form-label">Detección</label>
                            <input asp-for="Deteccion" class="form-control" />
                            <span asp-validation-for="Deteccion" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="AP_NPR" class="form-label">AP/NPR</label>
                            <input asp-for="AP_NPR" class="form-control" />
                            <span asp-validation-for="AP_NPR" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sección 6: Otros Datos -->
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">Análisis y Controles</h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="ModoFalla" class="form-label">Modo de Falla</label>
                            <textarea asp-for="ModoFalla" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="ModoFalla" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ControlesEstablecidos" class="form-label">Controles Establecidos</label>
                            <textarea asp-for="ControlesEstablecidos" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="ControlesEstablecidos" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="EvidenciaFotografica" class="form-label">Evidencia Fotográfica</label>
                            <input asp-for="EvidenciaFotografica" class="form-control" type="file" multiple />
                            <span asp-validation-for="EvidenciaFotografica" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botón de Guardar -->
            <div class="col-12">
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Guardar Cambios
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}