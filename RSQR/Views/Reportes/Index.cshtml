@model IEnumerable<RSQR.Models.Reporte>

@{
    ViewData["Title"] = "REPORTES";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i> Nuevo Reporte
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table id="reportesTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Nivel del Problema</th>
                <th>Nombre de Usuario</th>
                <th>Línea</th>
                <th>Tipo</th>
                <th>Título del Problema</th>
                <th>5M</th>
                <th>Número de Parte Afectado</th>
                <th>Descripción</th>
                <th>Descripción del Problema</th>
                <th>Qué</th>
                <th>Por qué</th>
                <th>Dónde</th>
                <th>Quién</th>
                <th>Cuándo</th>
                <th>Cuántos</th>
                <th>Cómo</th>
                <th>Lote</th>
                <th>Evidencia Fotográfica</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProblemRank)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Linea)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                    <td>@Html.DisplayFor(modelItem => item.TituloProblema)</td>
                    <td>@Html.DisplayFor(modelItem => item.CincoM)</td>
                    <td>@Html.DisplayFor(modelItem => item.NumParteAfectado)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.DescripcionProblema)</td>
                    <td>@Html.DisplayFor(modelItem => item.QueP)</td>
                    <td>@Html.DisplayFor(modelItem => item.PorqueP)</td>
                    <td>@Html.DisplayFor(modelItem => item.DondeP)</td>
                    <td>@Html.DisplayFor(modelItem => item.QuienP)</td>
                    <td>@Html.DisplayFor(modelItem => item.CuandoP)</td>
                    <td>@Html.DisplayFor(modelItem => item.CuantosP)</td>
                    <td>@Html.DisplayFor(modelItem => item.ComoP)</td>
                    <td>@Html.DisplayFor(modelItem => item.Lote)</td>
                    <td>
                        @if (item.EvidenciaFotografica != null && item.EvidenciaFotografica.Count > 0)
                        {
                            <span>Con evidencia</span>
                        }
                        else
                        {
                            <span>Sin evidencia</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i>Editar</a>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i>Detalles</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-eraser" aria-hidden="true"></i>Borrar</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

        @section Scripts {
            <script>
                $(document).ready(function() {
                    $('#reportesTable').DataTable({
                        responsive: true,
                       
                    });
                });
            </script>
        }
